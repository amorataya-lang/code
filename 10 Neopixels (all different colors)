import time
import board
import neopixel

pixels = neopixel.NeoPixel(board.NEOPIXEL, 10, brightness=0.3, auto_write=True)

rainbow = [
    (255, 0, 0),    
    (255, 127, 0),   
    (255, 255, 0),   
    (0, 255, 0),   
    (0, 255, 127),   
    (0, 0, 255),     
    (75, 0, 130),    
    (148, 0, 211),   
    (255, 255, 255), 
    (0, 127, 0)        
]

while True:
    for i in range(10):
        pixels[i] = rainbow[i]
    time.sleep(0.5)

    pixels.fill((0, 0, 0))  
    time.sleep(10)
